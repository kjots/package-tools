{
  "name": "@kjots/{{name}}",
  "version": "0.0.0",
{{#if description}}
  "description": "{{description}}",
{{/if}}
  "scripts": {
    "build": "tsc --build packages/*",
    "build:cli": "tsc --build packages/cli",
    "build:common": "tsc --build packages/common",
    "build:core": "tsc --build packages/core",
    "clean": "rimraf 'packages/*/{,!(node_modules)/**/}{*.d.ts,*.js,*.js.map}' packages/*/tsconfig.tsbuildinfo",
    "clean:cli": "rimraf 'packages/cli/{,!(node_modules)/**/}{*.d.ts,*.js,*.js.map}' packages/cli/tsconfig.tsbuildinfo",
    "clean:common": "rimraf 'packages/common/{,!(node_modules)/**/}{*.d.ts,*.js,*.js.map}' packages/common/tsconfig.tsbuildinfo",
    "clean:core": "rimraf 'packages/core/{,!(node_modules)/**/}{*.d.ts,*.js,*.js.map}' packages/core/tsconfig.tsbuildinfo",
    "lerna:bootstrap": "lerna bootstrap",
    "prepare": "npm-run-all lerna:bootstrap clean build",
    "test": "npm-run-all test:cli test:common test:core",
    "test:cli": "npm-run-all test:cli:lint",
    "test:cli:lint": "tslint --project packages/cli",
    "test:common": "npm-run-all test:common:lint",
    "test:common:lint": "tslint --project packages/common",
    "test:core": "npm-run-all test:core:lint",
    "test:core:lint": "tslint --project packages/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjots/{{name}}.git"
  },
  "keywords": [
{{#keywords}}
    "{{keyword}}"{{#unless last}},{{/unless}}
{{/keywords}}
  ],
  "author": "Karl Juri Ots <kjots@kjots.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kjots/{{name}}/issues"
  },
  "homepage": "https://github.com/kjots/{{name}}#readme",
  "engines": {
    "node": ">=12.16.0",
    "npm": ">=6.13.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@kjots/tslint-rules": "^1.6.3",
    "@types/node": "^12.12.27",
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
