{
  "name": "@kjots/{{name}}",
  "version": "0.0.0",
{{#if description}}
  "description": "{{description}}",
{{/if}}
  "scripts": {
    "build": "tsc --build packages/*",
    "build:cli": "tsc --build packages/cli",
    "build:common": "tsc --build packages/common",
    "build:core": "tsc --build packages/core",
    "clean": "rimraf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "clean:cli": "rimraf packages/cli/dist packages/cli/tsconfig.tsbuildinfo",
    "clean:common": "rimraf packages/common/dist packages/common/tsconfig.tsbuildinfo",
    "clean:core": "rimraf packages/core/dist packages/core/tsconfig.tsbuildinfo",
    "lerna:bootstrap": "lerna bootstrap",
    "prepare": "npm-run-all lerna:bootstrap clean build",
    "test": "npm-run-all test:cli test:common test:core",
    "test:cli": "npm-run-all test:cli:lint",
    "test:cli:lint": "tslint --project packages/cli",
    "test:common": "npm-run-all test:common:lint",
    "test:common:lint": "tslint --project packages/common",
    "test:core": "npm-run-all test:core:lint",
    "test:core:lint": "tslint --project packages/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjots/{{name}}.git"
  },
  "keywords": [
{{#keywords}}
    "{{keyword}}"{{#unless last}},{{/unless}}
{{/keywords}}
  ],
  "author": "Karl Juri Ots <kjots@kjots.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kjots/{{name}}/issues"
  },
  "homepage": "https://github.com/kjots/{{name}}#readme",
  "engines": {
    "node": ">=12.14.1",
    "npm": ">=6.13.4"
  },
  "devDependencies": {
    "@kjots/tslint-rules": "^1.4.3",
    "@types/node": "^12.12.24",
    "npm-run-all": "^4.1.5",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
