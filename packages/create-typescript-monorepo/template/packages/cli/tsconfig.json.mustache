{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": ".",
    "paths": {
      "@kjots/{{name}}-common": [
        "../common"
      ],
      "@kjots/{{name}}-common/*": [
        "../common/*"
      ],
      "@kjots/{{name}}-core": [
        "../core"
      ],
      "@kjots/{{name}}-core/*": [
        "../core/*"
      ]
    }
  },
  "references": [
    { "path": "../common" },
    { "path": "../core" }
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts"
  ]
}
