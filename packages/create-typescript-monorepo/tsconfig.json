{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@kjots/package-creator": [
        "../package-creator"
      ],
      "@kjots/package-creator/*": [
        "../package-creator/*"
      ]
    }
  },
  "references": [
    { "path": "../package-creator" }
  ],
  "include": [
    "src/**/*"
  ]
}
